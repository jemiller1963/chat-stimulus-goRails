<div class="flex justify-center flex-1 w-full px-2 pt-6 pb-8 mx-auto mb-4 text-lg">
  <div class="flex-none">
  <h1>Users#index</h1>
  </div>
</div>


<div class="flex flex-wrap justify-center mx-auto bg-gray-100 border border-red-500">
  <% @users.each do |user| %>
    <div class="flex-none w-64 p-6 m-6 bg-white rounded-lg shadow-md">
      <div class="p2">
        <%= link_to user.email, user %>
      </div>
    </div>
  <% end %>
</div>
